<!--  Jabber2 - xdb_file JBOX configuration  -->
<jbox project='xdb_file'>
  <build>
    <variables>
      <var name='CFLAGS'><value>-I ../jabberd/</value></var>
    </variables>
    <make>
      <macro name='HEADERS'>
        <file>../jabberd/jabberd.h</file>
      </macro>
      <macro name='OBJECTS'>
        <file>xdb_file.o</file>
      </macro>
      <compile>
 	<objectfile macro='OBJECTS'>
	  <dep><macro>HEADERS</macro></dep>
        </objectfile>
        <sharedobject name='xdb_file.so' type='dynamic'>
          <dep filelist='1'>
            <macro>OBJECTS</macro>
          </dep>
        </sharedobject>
      </compile>
    </make>
  </build>
</jbox>
