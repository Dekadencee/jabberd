<jabber>

  <service id="session manager">

    <!-- change hostname below! -->
    <host>localhost</host>

    <load main="jsm">
      <jsm>./jsm/jsm.so</jsm>
      <mod_echo>./jsm/jsm.so</mod_echo>
      <mod_roster>./jsm/jsm.so</mod_roster>
      <mod_time>./jsm/jsm.so</mod_time>
      <mod_vcard>./jsm/jsm.so</mod_vcard>
      <mod_version>./jsm/jsm.so</mod_version>
      <mod_announce>./jsm/jsm.so</mod_announce>
      <mod_agents>./jsm/jsm.so</mod_agents>
      <mod_admin>./jsm/jsm.so</mod_admin>
      <mod_private>./jsm/jsm.so</mod_private>
      <mod_register>./jsm/jsm.so</mod_register>
      <mod_presence>./jsm/jsm.so</mod_presence>
      <mod_auth>./jsm/jsm.so</mod_auth>
      <mod_auth_sha1>./jsm/jsm.so</mod_auth_sha1>
      <mod_offline>./jsm/jsm.so</mod_offline>
    </load>
    <jsm xmlns="jabberd:jsm:config">
      <agents/>
      <register/>
    </jsm>
  </service>

  <xdb id="xdb file">
    <host/>
    <load><xdb_file>./xdb_file/xdb_file.so</xdb_file></load>
    <xdb_file xmlns="jabberd:xdb_file:config"><spool>/var/tmp</spool></xdb_file>
  </xdb>

  <service id="pthsock client to server manager">
    <host>pth-csock.127.0.0.1</host>
    <load><pthsock_client>./pthsock/pthsock_client.so</pthsock_client></load>
    <pthcsock xmlns='jabberd:pth-csock:config'>
      <host>pth-csock.127.0.0.1</host>
      <listen>5222</listen>
    </pthcsock>
  </service>

  <service id="pthsock server to server manager">
    <host/>
    <load><pthsock_server>./pthsock/pthsock_server.so</pthsock_server></load>
  </service>

</jabber>
