<!--  Jabber2 - jabberd JBOX configuration  -->
<jbox project='jabberd'>
  <build>
    <variables>
      <var name='DEFINES'><value>-DCONFIGXML="\"jabber.xml\"" -DHOME="\"$(JHOME)\""</value></var>
      <var name='LIBS'>-lresolv</var>
    </variables>
    <libraries>
      <library priority='required'>
        <name>pth</name>
        <version>
	  <needed>1.3.7</needed>
	  <command>pth-config --version</command>
        </version>
	<var name='CFLAGS'><command>pth-config --cflags</command></var>
	<var name='LDFLAGS'><command>pth-config --ldflags</command></var>
	<var name='LIBS' type='dynamic'><command>pth-config --libs</command></var>
	<var name='PTHLIBDIR'><command>pth-config --libdir</command></var>
      </library>
    </libraries>
    <make>
      <project>base</project>
      <project>lib</project>
      <macro name='HEADERS'>
        <file>jabberd.h</file>
      </macro>
      <macro name='OBJECTS'>
        <file>config.o</file>
        <file>deliver.o</file>
        <file>heartbeat.o</file>
        <file>jabberd.o</file>
        <file>load.o</file>
        <file>log.o</file>
        <file>mio.o</file>
        <file>mio_raw.o</file>
        <file>mio_ssl.o</file>
        <file>mio_xml.o</file>
        <file>mtq.o</file>
        <file>static.o</file>
        <file>xdb.o</file>
      </macro>
      <macro name='EXOBJECTS'>
	<macro project='base'>OBJECTS</macro>
	<macro project='lib'>OBJECTS</macro>
      </macro>
      <macro name='STATICOBJECTS'>
	<macro project='/dnsrv'>OBJECTS</macro>
	<macro project='/dialback'>OBJECTS</macro>
	<macro project='/jsm'>OBJECTS</macro>
	<macro project='/jsm/modules'>OBJECTS</macro>
	<macro project='/pthsock'>client_OBJECTS</macro>
	<macro project='/xdb_file'>OBJECTS</macro>
      </macro>
      <macro name='STATICLIBS'>
        <file>$(PTHLIBDIR)/libpth.a</file>
	<file>/usr/lib/libresolv.a</file>
      </macro>
      <compile>
 	<objectfile macro='OBJECTS'>
	  <dep><macro>HEADERS</macro></dep>
        </objectfile>
        <binary name='jabberd' type='dynamic'>
          <dep filelist='1'>
            <macro>OBJECTS</macro>
            <macro>EXOBJECTS</macro>
          </dep>
        </binary>
        <binary name='jabberd' type='static'>
          <dep filelist='1'>
            <macro>OBJECTS</macro>
            <macro>EXOBJECTS</macro>
            <macro>STATICOBJECTS</macro>
            <macro>STATICLIBS</macro>
          </dep>
        </binary>
        <binary name='jabberd' type='single'>
          <dep filelist='1'>
            <macro>OBJECTS</macro>
            <macro>EXOBJECTS</macro>
            <macro>STATICOBJECTS</macro>
            <macro>STATICLIBS</macro>
          </dep>
        </binary>
      </compile>
    </make>
  </build>
</jbox>
