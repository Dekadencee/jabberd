<!--  Jabber2 - jabberd JSX configuration  -->
<jsx project='jabberd'>
  <build>
    <variables>
      <var name='DEFINES'><value>-DCONFIGXML="\"jabber.xml\"" -DHOME="\"$(JHOME)\""</value></var>
    </variables>
    <libraries>
      <library priority='required'>
        <name>xode</name>
        <version>
	  <needed>1.2</needed>
	  <command>libxode-config --version</command>
        </version>
	<var name='CFLAGS'><command>libxode-config --cflags</command></var>
	<var name='LDFLAGS'><command>libxode-config --ldflags</command></var>
	<var name='LIBS'><command>libxode-config --libs</command></var>
      </library>
      <library priority='required'>
        <name>jabber</name>
        <version>
	  <needed>1.2</needed>
	  <command>jabber-config --version</command>
        </version>
	<var name='CFLAGS'><command>jabber-config --cflags</command></var>
	<var name='LDFLAGS'><command>jabber-config --ldflags</command></var>
	<var name='LIBS'><command>jabber-config --libs</command></var>
      </library>
      <library priority='required'>
        <name>pth</name>
        <version>
	  <needed>1.3.7</needed>
	  <command>pth-config --version</command>
        </version>
	<var name='CFLAGS'><command>pth-config --cflags</command></var>
	<var name='LDFLAGS'><command>pth-config --ldflags</command></var>
	<var name='LIBS'><command>pth-config --libs</command></var>
      </library>
    </libraries>
    <make>
      <project>gen</project>
      <project>io</project>
      <project>log</project>
      <project>xdb</project>
      <macro name='HEADERS'>
        <file>jabberd.h</file>
      </macro>
      <macro name='OBJECTS'>
        <file>config.o</file>
        <file>mio.o</file>
        <file>deliver.o</file>
        <file>heartbeat.o</file>
        <file>jabberd.o</file>
        <file>load.o</file>
        <file>log.o</file>
      </macro>
      <macro name='EXOBJECTS'>
        <file>gen/base_host.o</file>
        <file>io/base_connect.o</file>
        <file>io/base_exec.o</file>
        <file>io/base_stdout.o</file>
        <file>io/base_load.o</file>
        <file>io/base_accept.o</file>
        <file>log/base_file.o</file>
        <file>log/base_format.o</file>
        <file>log/base_logtype.o</file>
        <file>log/base_stderr.o</file>
        <file>log/base_to.o</file>
        <file>xdb/base_ns.o</file>
      </macro>
      <compile>
 	<objectfile macro='OBJECTS'>
	  <dep><macro>HEADERS</macro></dep>
        </objectfile>
        <binary name='jabberd'>
          <dep filelist='1'>
            <macro>OBJECTS</macro>
            <macro>EXOBJECTS</macro>
          </dep>
        </binary>
      </compile>
    </make>
  </build>
</jsx>
