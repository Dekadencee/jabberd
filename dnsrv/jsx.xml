<!--  Jabber2 - dnsrv JSX configuration  -->
<jsx project='dnsrv'>
  <build>
    <variables>
      <var name='CFLAGS'><value>-I ../jabberd/</value></var>
    </variables>
    <make>
      <macro name='HEADERS'>
        <file>../jabberd/jabberd.h</file>
        <file>srv_resolv.h</file>
      </macro>
      <macro name='OBJECTS'>
        <file>dnsrv.o</file>
        <file>srv_resolv.o</file>
      </macro>
      <compile>
 	<objectfile macro='OBJECTS'>
	  <dep><macro>HEADERS</macro></dep>
        </objectfile>
        <sharedobject name='dnsrv.so'>
          <dep filelist='1'>
            <macro>OBJECTS</macro>
          </dep>
        </sharedobject>
      </compile>
    </make>
  </build>
</jsx>
