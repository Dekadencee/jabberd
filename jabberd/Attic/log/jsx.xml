<!--  Jabber2 - jabberd/log JSX configuration  -->
<jsx project='log'>
  <build>
    <make>
      <macro name='HEADERS'>
        <file>../jabberd.h</file>
      </macro>
      <macro name='OBJECTS'>
        <file>base_file.o</file>
        <file>base_format.o</file>
        <file>base_logtype.o</file>
        <file>base_stderr.o</file>
        <file>base_to.o</file>
      </macro>
      <compile>
 	<objectfile macro='OBJECTS'>
	  <dep><macro>HEADERS</macro></dep>
        </objectfile>
      </compile>
    </make>
  </build>
</jsx>
